{% extends "base.html.twig" %}

{% block meta_description %}
    <meta name="description" content="{{ resume.description }}">
{% endblock %}

{% block meta_keywords %}
    <meta name="keywords" content="{{ resume.keywords }}">
{% endblock %}

{% block title %}
    <title>{{ resume.name }} | {{ resume.title }} | {{ resume.email }}</title>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/resume.css') }}">
{% endblock %}

{% block body %}
    <div class="container">

        <div class="header row">
            <div class="header_title col-md-12">
                <h1>{{ resume.name }}</h1>
                <h2>{{ resume.title }}</h2>
            </div>
        </div>

        {% if resume.accomplishments is defined %}
            <div class="cv_section row">
                <div class="cv_section_title col-md-3">
                    <h2>Accomplishments</h2>
                </div>
                <div class="col-md-9">
                    <div class="cv_item">
                        <ul>
                            {% for accomplishment in resume.accomplishments %}
                                <li>{{ accomplishment }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        {% endif %}

        {% if resume.experience is defined %}
            {% for experience in resume.experience %}
                <div class="cv_section row">
                    <div class="cv_section_title col-md-3">
                        <h2>{{ experience.name }}</h2>
                    </div>
                    <div class="col-md-9">
                        {% for job in experience.jobs %}
                            <div class="cv_item">
                                <div class="cv_item_timespan float-right">{{job.start}} - {{job.end}}</div>
                                <h2>{{ job.title }}</h2>
                                {% if job.list is defined %}
                                    <ul>
                                        {% for item in job.list %}
                                            <li>{{ item }}</li>
                                        {% endfor %}
                                    </ul>
                                {% endif %}
                                {% if job.projects is defined %}
                                    {% for project in job.projects %}
                                        <h3>{{ project.title }}</h3>
                                        <p>{{ project.description }}</p>
                                    {% endfor %}
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        {% endif %}

        {% if resume.skills is defined %}
            <div class="cv_section row">
                <div class="cv_section_title col-md-3">
                    <h2>Skill set</h2>
                </div>
                <div class="col-md-9">
                    <div class="cv_item">
                        <dl class="row">
                            {% for skill in resume.skills %}
                                <dt class="col-6 col-md-5 col-lg-4 text-right">{{ skill.title }}</dt>
                                <dd class="col-6 col-md-7 col-lg-8 mb-md-0">{{ skill.description|join('<br>')|raw }}</dd>
                            {% endfor %}
                        </dl>
                    </div>
                </div>
            </div>
        {% endif %}

        {% if resume.education is defined %}
            <div class="cv_section row">
                <div class="cv_section_title col-md-3">
                    <h2>Education</h2>
                </div>
                <div class="col-md-9">
                    {% for item in resume.education %}
                        <div class="cv_item">
                            <div class="cv_item_timespan float-right">{{ item.start }} â€“ {{ item.end }}</div>
                            <h2>
                                {% if item.link is not empty %}
                                    <a href="{{ item.link }}" target="_blank">{{ item.title }}</a>
                                {% else %}
                                    {{ item.title }}
                                {% endif %}
                            </h2>
                            <p>{{ item.location }}</p>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        {% if resume.about is defined %}
            <div class="cv_section row">
                <div class="cv_section_title col-md-3">
                    <h2>About me</h2>
                </div>
                <div class="col-md-9">
                    <div class="other cv_item">
                        {% for item in resume.about %}
                            <span class="other_item other_email">
                                {{ item.key }}: 
                                {% if item.link is not empty %}
                                    <a href="{{ item.link }}" target="{{ item.target }}">{{ item.value }}</a>
                                {% else %}
                                    {{ item.value }}
                                {% endif %}
                            </span>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endif %}

    </div>
{% endblock %}

{% block javascripts %}
{% endblock %}